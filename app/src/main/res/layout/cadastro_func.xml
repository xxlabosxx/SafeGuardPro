<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".view.MainActivity">

    <EditText
        android:id="@+id/FUNCtelefone"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:background="#D9D9DA"
        android:hint="Telefone"
        android:textSize="28sp"
        android:autofillHints="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FUNCnome" />

    <EditText
        android:id="@+id/FUNCconfirmasenha"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:background="#D9D9DA"
        android:radius="25dp"
        android:hint="Confirmar senha"
        android:textSize="28sp"
        android:autofillHints="password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FUNCsenha" />

    <EditText
        android:id="@+id/FUNCsenha"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:background="#D9D9DA"
        android:radius="25dp"
        android:hint="Senha"
        android:textSize="28sp"
        android:autofillHints="password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FUNCemail" />


    <TextView
        android:id="@+id/FUNCtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Cadastro funcionÃ¡rio"
        android:textColor="#FFEB3B"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar" />

    <View
        android:id="@+id/quebralinha1"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#FFC107"
        app:layout_constraintBottom_toTopOf="@+id/FUNCtxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar" />

    <View
        android:id="@+id/quebralinha2"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#FFC107"
        app:layout_constraintBottom_toTopOf="@+id/FUNCnome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FUNCtxt" />

    <EditText
        android:id="@+id/FUNCnome"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:background="#D9D9DA"
        android:hint="Nome"
        android:textSize="28sp"
        android:autofillHints="name"
        app:circularflow_radiusInDP=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FUNCtxt" />

    <EditText
        android:id="@+id/FUNCemail"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:background="#D9D9DA"
        android:radius="25dp"
        android:hint="E-mail"
        android:textSize="28sp"
        android:autofillHints="emailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FUNCtelefone" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"

        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white"
        android:backgroundTint="#FFC107"
        android:minHeight="?attr/actionBarSize"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/IMGlogo"
        android:layout_width="89dp"
        android:layout_height="89dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar"
        app:srcCompat="@drawable/safe_guard_pro_1_removebg_preview_3" />

    <ImageView
        android:id="@+id/IMGperfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toEndOf="@+id/materialToolbar"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar"
        app:srcCompat="@drawable/icone"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/IMGnotificacao"
        android:layout_width="56dp"
        android:layout_height="46dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toStartOf="@+id/IMGperfil"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notificao"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/IMGmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toStartOf="@+id/IMGnotificacao"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar"
        app:srcCompat="@drawable/seta"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/FUNCbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmar"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FUNCconfirmasenha"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>