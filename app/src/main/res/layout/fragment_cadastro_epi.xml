<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <EditText
        android:id="@+id/edtDataValidade"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:background="#D9D9DA"
        android:hint="Data de validade:"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EPInome"
        />

    <EditText
        android:id="@+id/EPIcategoria"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#D9D9DA"
        android:hint="Categoria do EPI:"
        android:layout_marginTop="35dp"
        android:minHeight="50dp"
        android:radius="25dp"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EPIdescricao" />


    <EditText
        android:id="@+id/EPIdescricao"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:background="#D9D9DA"
        android:hint="Descrição do EPI:"
        android:minHeight="50dp"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EPIid" />

    <TextView
        android:id="@+id/EPIcadastrotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Cadastro EPI"
        android:textColor="#FFEB3B"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar" />

    <View
        android:id="@+id/view"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#FFC107"
        app:layout_constraintBottom_toTopOf="@+id/EPIcadastrotxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar" />

    <View
        android:id="@+id/view2"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#FFC107"
        app:layout_constraintBottom_toTopOf="@+id/EPInome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EPIcadastrotxt" />

    <EditText
        android:id="@+id/EPInome"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:background="#D9D9DA"
        android:hint="Nome EPI:"
        android:textSize="28sp"
        app:circularflow_radiusInDP=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EPIcadastrotxt" />

    <EditText
        android:id="@+id/EPIid"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:background="#D9D9DA"
        android:radius="25dp"
        android:hint="ID do CA:"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDataValidade" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"

        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white"
        android:backgroundTint="#FFC107"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:backgroundTint="#FFC107"
        android:layout_width="89dp"
        android:layout_height="89dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar"
        app:srcCompat="@drawable/safe_guard_pro_1_removebg_preview_3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toEndOf="@+id/materialToolbar"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar"
        app:srcCompat="@drawable/icone"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="56dp"
        android:layout_height="46dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notificao"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar"
        app:srcCompat="@drawable/seta"/>

    <Button
        android:id="@+id/EPIcadastrobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#FFC107"
        android:text="@string/confirmar"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EPIcategoria"/>

</androidx.constraintlayout.widget.ConstraintLayout>